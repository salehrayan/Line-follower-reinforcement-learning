<?xml version="1.0"?>
<robot name="simplecar">
    <!-- Base Frame of Car -->
    <link name="base_link">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.5 0.3 0.1"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.3 0.1"/>
            </geometry>
        </collision>
    </link>

    <!-- Left Back Wheel -->
    <link name="left_back_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.2"/>
            <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.001"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin rpy="1.57075 0 0"/>
            <material name="Red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin rpy="1.57075 0 0"/>
        </collision>
        <contact>
            <lateral_friction value="1.0"/>
            <rolling_friction value="1000"/>
            <stiffness value="30000"/>
            <damping value="1000"/>
        </contact>
    </link>
    <joint name="base_to_left_back_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="left_back_wheel"/>
        <axis xyz="0 1 0"/>
        <origin xyz="-0.2 0.175 -0.1"/>
        <dynamics damping="0.1" friction="0"/>
    </joint>

    <!-- Right Back Wheel -->
    <link name="right_back_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.2"/>
            <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.001"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin rpy="1.57075 0 0"/>
            <material name="Green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.1"/>
            </geometry>
            <origin rpy="1.57075 0 0"/>
        </collision>
        <contact>
            <lateral_friction value="1.0"/>
            <rolling_friction value="1000"/>
            <stiffness value="30000"/>
            <damping value="1000"/>
        </contact>
    </link>
    <joint name="base_to_right_back_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="right_back_wheel"/>
        <axis xyz="0 1 0"/>
        <origin xyz="-0.2 -0.175 -0.1"/>
        <dynamics damping="0.1" friction="0"/>
    </joint>

    <!-- Forward Wheel Hinge -->
    <link name="forward_wheel_hinge">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.001"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.01"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.01"/>
            </geometry>
        </collision>
    </link>

    <!-- Forward Wheel -->
    <link name="forward_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.2"/>
            <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.001"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.06"/>
            </geometry>
            <origin rpy="1.57075 0 0"/>
            <material name="Blue">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.06"/>
            </geometry>
            <origin rpy="1.57075 0 0"/>
        </collision>
        <contact>
            <lateral_friction value="1.0"/>
            <rolling_friction value="1000"/>
            <stiffness value="30000"/>
            <damping value="1000"/>
        </contact>
    </link>

    <!-- Joints for Forward Wheel -->
    <joint name="base_to_forward_wheel_hinge" type="revolute">
        <parent link="base_link"/>
        <child link="forward_wheel_hinge"/>
        <origin rpy="0 0 0" xyz="0.20 0 -0.12"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="0.1" friction="0"/>
        <limit lower="-0.78" upper="0.78" effort="1" velocity="1"/>
    </joint>
    
    <joint name="forward_wheel_hinge_to_wheel" type="continuous">
        <parent link="forward_wheel_hinge"/>
        <child link="forward_wheel"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="0.1" friction="0"/>
    </joint>
</robot>
